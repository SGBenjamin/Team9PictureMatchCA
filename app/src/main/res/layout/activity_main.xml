<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/welcomeSplash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:contentDescription="splashImage"
        android:src="@drawable/cards"
        app:flow_horizontalBias="0.0"
        app:layout_constraintBottom_toTopOf="@id/highscoreBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/App_title"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/soloMatch"
        android:layout_width="175dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/teal_700"
        android:text="Solo Match"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/highscoreBtn" />

    <Button
        android:id="@+id/multiMatch"
        android:layout_width="175dp"
        android:layout_height="80dp"
        android:backgroundTint="@color/teal_700"
        android:text="Multi Match"
        app:cornerRadius="15dp"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toRightOf="@id/soloMatch"
        app:layout_constraintTop_toBottomOf="@id/highscoreBtn"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/soloMatch20"
        android:layout_width="175dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:backgroundTint="@color/teal_700"
        android:text="Solo Match 20"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:layout_constraintTop_toBottomOf="@id/soloMatch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/multiMatch20"
        android:layout_width="175dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/teal_700"
        android:text="Multi Match 20"
        android:textSize="20sp"
        app:cornerRadius="15dp"
        app:layout_constraintLeft_toRightOf="@id/soloMatch20"
        app:layout_constraintTop_toBottomOf="@id/multiMatch"/>

    <Button
        android:id="@+id/highscoreBtn"
        android:layout_width="300dp"
        android:layout_height="75sp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="30dp"
        android:text="@string/leaderboard"
        android:textAllCaps="true"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@id/soloMatch"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeSplash"
    />


</androidx.constraintlayout.widget.ConstraintLayout>
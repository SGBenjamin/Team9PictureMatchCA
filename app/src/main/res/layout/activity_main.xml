<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/welcomeSplash"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@tools:sample/backgrounds/scenic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/soloMatch12"
        app:flow_horizontalBias="0.0"

        />

    <Button
        android:id="@+id/soloMatch12"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:text="Solo Match 12"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@id/multiMatch12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/multiMatch12"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:text="Multi Match 12"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@id/SoloMatch20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.932"
        app:layout_constraintHorizontal_bias="0.075"/>

    <Button
        android:id="@+id/SoloMatch20"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:text="Solo Match 20"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@id/multiMatch20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.932"
        app:layout_constraintHorizontal_bias="0.075"/>

    <Button
        android:id="@+id/multiMatch20"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:text="Multi Match 20"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.932"
        app:layout_constraintHorizontal_bias="0.075"/>

    <Button
        android:id="@+id/dlImages"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:backgroundTint="@color/teal_700"
        android:text="Download Images"
        android:textSize="20px"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.975"/>


</androidx.constraintlayout.widget.ConstraintLayout>